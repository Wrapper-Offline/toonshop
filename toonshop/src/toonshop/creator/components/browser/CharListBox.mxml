<?xml version="1.0" encoding="utf-8"?>
<s:Panel
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	width="400" height="280">

	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:SolidColor color="0xF5F5F5"/>
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke color="0xC8C8C8"/>
		</s:stroke>
	</s:Rect>
	<s:DataGroup id="charDataGroup" itemRenderer="spark.skins.spark.DefaultComplexItemRenderer"
		clipAndEnableScrolling="true"
		width="100%"
		height="300">
		<s:layout>
			<s:TileLayout
				horizontalGap="5"
				verticalGap="5"
				columnAlign="justifyUsingGap"
				paddingRight="6"
				paddingLeft="6"
				useVirtualLayout="true"
				orientation="columns"/>
		</s:layout>
	</s:DataGroup>
	<s:HScrollBar bottom="0" width="100%" viewport="{charDataGroup}"/>

</s:Panel>
